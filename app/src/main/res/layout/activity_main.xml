<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.missionarsbarnsapp.marku.mbtapp.MainActivity"
    android:background="@drawable/mbtbackground"
    >


    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="125dp"
        android:id="@+id/Viewflipper"
        android:layout_centerHorizontal="true"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imageedit_1_2186909303"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/group_photo"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hemsida"
            android:scaleType="fitXY"
            android:id="@+id/button_hemsida"
            />


    </ViewFlipper>






    <TextView
        android:id="@+id/time"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="David Wrang!"
        android:layout_marginLeft="5dp"
        />


    <Button
        android:text="Menu"
        android:textSize="32sp"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/button"

        />




    <ImageButton
        android:layout_width="50dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/Viewflipper"
        android:id="@+id/button_previous"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="125dp"
        android:layout_alignTop="@+id/button_next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_navigate_before_black_48dp"
        android:id="@+id/left_button_image" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/button_previous"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_next"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/ic_navigate_next_black_48dp"
        android:layout_alignTop="@+id/left_button_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="500dp"
        android:layout_height="265dp"

        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
